.t-FF9797 {
  color: #ff9797;
}

.block {
  display: block !important;
}

.fadeInDown {
  display: block !important;
}

.replyTo {
  padding: 3px 10px;
  line-height: 12px;
  font-size: 14px;
  border-radius: 5px;
  background-color: darkorange;
  color: #fff;
}

.nowReply {
  position: absolute;
  bottom: 8px;
  right: 70px;
  line-height: 14px;
  background-color: #ff4163;
  padding: 2px 10px;
  border-radius: 5px;
  color: #fff;
}

.article {
  background-color: #eee;
  border: 1px solid rgba(0, 0, 0, 0);
  position: relative;
  overflow: hidden;
}

.article-info {
  width: 100%;
  height: 70px;
  background-color: #fff;
  position: fixed;
  top: 0px;
  z-index: 10;
  line-height: 70px;
  border-bottom: 1px solid #eee;
  box-shadow: 1px 1px 5px #ddd;
}

.websiteName {
  float: left;
  width: 200px;
  border-right: 1px solid #ddd;
  font-size: 20px;
}

.websiteInfo {
  margin-left: 210px;
  text-align: left;
}

.articleBox {
  position: relative;
  z-index: 5;
  width: 100%;
  margin: 0 auto;
  background-color: #fff;
  padding: 10px;
  box-sizing: border-box;
}

.articleBox > .title {
  font-size: 24px;
  line-height: 1.2;
  margin: 3% 0 0;
  display: block;
  text-align: center;
}

.pubtime {
  color: #999;
  font-size: 12px;
  display: block;
  text-align: center;
  margin: 20px 0px;
}

.a-img {
  position: relative;
  display: block;
  width: 100%;
  overflow: hidden;
  -webkit-transition: all 0.24s ease;
  transition: all 0.24s ease;
  margin: 0 auto;
}

.detail {
  font-size: 14px;
  margin: 20px auto;
  color: #333;
  text-align: left;
}

.remarks {
  position: relative;
  background-color: #eee;
  color: #999;
  font-size: 12px;
  display: block;
  margin: 0 0 10px;
  padding: 10px;
  box-shadow: 1px 2px 3px #ddd;
  text-align: left;
}

.tips {
  padding: 20px 0px;
}

.tips .leftBar {
  float: left;
}

.tips .rightBar {
  float: right;
  margin-top: 10rpx;
}

.tips .leftBar text {
  float: left;
  text-align: center;
  font-size: 24rpx;
  color: #777;
  padding: 10rpx 10rpx;
  max-width: 100px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  background-color: #efefef;
}

.tips .rightBar view {
  position: relative;
  float: left;
  margin: 0px 10px;
  font-size: 24rpx;
  color: #999;
}

.tips .rightBar view:last-child {
  margin-right: 0;
}

.replyBox {
  text-align: left;
  margin-top: 20px;
}

.replyList .photo {
  float: left;
}

.replyList .photo image {
  width: 65px;
  height: 64px;
  border-radius: 100px;
}

.commentInfo {
  margin-left: 74px;
}

.commentInfo .h3 {
  font-size: 16px;
}

.commentInfo .h3 text {
  display: inline-block;
  margin-right: 10px;
}

.commentInfo .replydate {
  font-size: 12px;
  color: #999;
}

.replyName {
  font-weight: 600;
}

.commentInfo .z-reply {
  float: right;
  font-size: 12px;
  color: #999;
  cursor: pointer;
}

.s_reply {
  float: right;
  font-size: 12px;
  color: #999;
  cursor: pointer;
}

.commentInfo-detail {
  font-size: 14px;
  line-height: 1.3;
  padding: 0px 0px 10px 0px;
  border-bottom: 1px dashed #ddd;
  color: #333;
}

.otherReply {
  margin: 10px 0px 10px 90px;
}

.otherReply-photo {
  float: left;
}

.otherReply-photo image {
  width: 30px;
  height: 30px;
  border-radius: 50px;
}

.otherReply-commentInfo {
  margin-left: 40px;
}

.otherReply-commentInfo .h3 {
  font-size: 14px;
}

.otherReply-commentInfo .h3 text {
  display: inline-block;
  margin-right: 10px;
}

.otherReply-commentInfo .replydate {
  font-size: 12px;
  color: #999;
}

.replyName {
  font-weight: 600;
}

.otherReply-commentInfo-detail {
  font-size: 12px;
  line-height: 1.3;
  padding: 0px 0px 10px 0px;
  border-bottom: 1px dashed #ddd;
  color: #333;
}

.replyText {
  display: none;
  box-sizing: border-box;
  width: 100%;
  border: 1px solid #ddd;
  border-radius: 5px;
  height: 150px;
  margin: 20px 0;
  padding: 10px;
  position: relative;
}

.replyText button {
  cursor: pointer;
  position: absolute;
  border: none;
  background-color: #00a0e9;
  color: #fff;
  padding: 5px 10px;
  border-radius: 5px;
  bottom: 5px;
  right: 5px;
  outline: none;
}



.comments {
  text-align: left;
  margin: 20px 0 0 0;
}

.c_btnGroup {
  text-align: center;
}

.comments h2 {
  font-size: 16px;
  color: #999;
}

.comments textarea {
  width: 100%;
  resize: none;
  box-sizing: border-box;
  outline: none;
  height: 200px;
  padding: 10px;
  border: 1px solid #ddd;
  margin: 10px 0px;
  border-radius: 5px;
  color: #0b0b0b;
  -webkit-user-select: text;
  -webkit-appearance: none;
}

.comments button {
  cursor: pointer;
  border: none;
  color: #fff;
  padding: 5px 15px;
  border-radius: 5px;
  margin-right: 20px;
  text-align: center;
  display: inline-block;
}

.comments button.newReply {
  background-color: #00a0ee;
}

.comments button.reset {
  background-color: #ff7f0d;
}

.replyList {
  margin-bottom: 20px;
}
